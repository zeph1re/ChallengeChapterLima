<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".FilmActivity.DetailList">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_detail_judul"
        android:text="Detail"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/detail_image"
        android:src="@drawable/ic_launcher_background"
        android:layout_below="@id/tv_detail_judul"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_detail_sutradara"
        android:text="ini sutradara"
        android:textSize="18sp"
        android:layout_below="@id/detail_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_detail_tanggal_rilis"
        android:text="ini tanggal"
        android:textSize="15sp"
        android:layout_below="@id/tv_detail_sutradara"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_detail_sinopsis"
        android:text="ini sinopsis"
        android:textSize="15sp"
        android:layout_below="@id/tv_detail_tanggal_rilis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>





</RelativeLayout>