<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".UserActivity.Profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_profile"
        android:text="Profile"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/edit_username"
        android:layout_below="@+id/tv_profile"
        android:layout_marginHorizontal="20dp"
        android:hint="Username"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_text_background"
        android:padding="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/edit_nama_lengkap"
        android:layout_below="@+id/edit_username"
        android:layout_marginHorizontal="20dp"
        android:hint="Nama Lengkap"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_text_background"
        android:padding="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/edit_tanggal_lahir"
        android:layout_below="@+id/edit_nama_lengkap"
        android:layout_marginHorizontal="20dp"
        android:hint="Tanggal Lahir"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_text_background"
        android:padding="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/edit_alamat"
        android:layout_below="@+id/edit_tanggal_lahir"
        android:layout_marginHorizontal="20dp"
        android:hint="Alamat"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_text_background"
        android:padding="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/update_btn"
        android:text="Update"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:layout_above="@id/logout_btn"
        android:layout_marginHorizontal="40dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/logout_btn"
        android:text="Logout"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="40dp" />


</RelativeLayout>